{
  "name": "video-cutter",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "electron .",
    "build": "electron-builder",
    "tw:build": "tailwindcss -i renderer/tailwind.css -o renderer/styles.css --minify",
    "tw:watch": "tailwindcss -i renderer/tailwind.css -o renderer/styles.css --watch"
  },
  "build": {
    "asarUnpack": [
      "node_modules/@ffmpeg-installer/**"
    ],
    "appId": "com.pascallacroix.videocutter",
    "productName": "Video Cutter",
    "mac": {
      "category": "public.app-category.video",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^3.4.10",
    "postcss": "^8.4.47",
    "autoprefixer": "^10.4.20"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0"
  }
}
